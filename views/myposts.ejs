<%- include('page_body_top')  %>
        <div class="main" >
            <% for (post of posts)  {%> 
                <div class="post-body">
                    <div class="post-top">
                        <h3> <%= post.title %> </h3>
                        <a class="alter-btn" href="alter_post?post_id=<%= post.post_id %>"><img src="/static/pen.png" width="11px" height="11px"></a>
                        <a class="delete-btn" href="/delete_post?post_id=<%= post.post_id %>">&#215;</a>
                    </div>
                    <p><%= post.post_content %></p>
                    <div class="lower-text">
                        <a href="#" class="user-link"><%= post.author %></a>
                        <small><%= post.date_posted %></small>
                    </div>
                </div>
            <% } %>    
        </div>
<%- include('page_body_bottom')  %> 
